<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    	<ImageView
    	    android:id="@+id/imageView_pointer"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="10dp"
    	    android:adjustViewBounds="true"
    	    android:contentDescription="@string/pointer"
    	    android:src="@drawable/arrow_tablet" >

</ImageView>
    	
	<ImageView
	    android:id="@+id/imageView_spinner"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@drawable/arrow"
	    android:contentDescription="@string/wheel"
	    android:scaleType="matrix"
	    android:src="@drawable/spin" >

</ImageView>

		<TextView
	    android:id="@+id/resultView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="40dp"
	    android:textStyle="bold"
	    android:textSize="24sp"
 		
 		android:typeface="serif"

android:textColor="#000000" 

android:shadowColor="#00ccff"

android:shadowRadius="1.5"

android:shadowDx="1"

android:shadowDy="1"
	    android:textIsSelectable="false" />
		
		<Button
		    android:id="@+id/dahButton"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:text="What&apos;s On Tap?"
		    android:textSize="20sp"
		     android:onClick="listBeers" />
		
</RelativeLayout>
